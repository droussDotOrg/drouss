{% extends "DROUSSBookBundle::base.html.twig" %}

{% block body %}

{% for flashMessage in app.session.flashbag.get('sucess') %}
<script>

		$(window).on('load', function() {
		var message = "{{ flashMessage }}";
	if(message != "")
	{
	swal("Message ", message, "success")
	}
		});

	</script>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('danger') %}
<script>

		$(window).on('load', function() {
		var message = "{{ flashMessage }}";
	if(message != "")
	{
	swal("Message ", message, "danger")
	}
		});

	</script>
{% endfor %}

