{% extends "DROUSSBookBundle::base.html.twig" %}

{% block body %}
	 <div class="row text-center" style="margin-top: 50px">
        <h1 class="text-primary">{{ author.getName }}</h1>
    </div>

         

                     
                             <img src="{{ gbd }}/media/images/auteurs/{{ author.getImagePath }}" alt="" class="block-center img-responsive" style="display: block !important;padding-left: 20px;float: left;
margin-right: 20px;"><br>

                            <p style="padding-left: 20px;padding-right: 10px;text-align: justify">{{ author.getBiography |clean_extrait}}</p><br>
                          
                            <p style="padding-left: 20px;clear: both;">
								<div class="list-group">

        <li href="#" class="list-group-item active">

            <span class=""></span> Ses Oeuvres <span class="badge" style="background-color:#fff;">Category</span>

        </li>
				{% for o in author.getBook  %}
									  <a href="{{  path('book_view', {'name' : o.getTitle|insertSep }) }}" class="list-group-item">

            <span class="glyphicon glyphicon-file"></span> {{o.getTitle }} <span class="badge" style="background-color:#5CB85C;">{{ o.getCategory.getName }}</span>

        </a>
									
			 {% else %}
            <div class="row"><h3 style="margin-left: 10%;">Pas De Livres</h3></div>
        {% endfor %}
    </div>
         
         
{% endblock %}